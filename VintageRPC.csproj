<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyTitle>VintageRPC</AssemblyTitle>
    <Authors>BitRapture</Authors>
    <Version>1.0.0</Version>
    <Description>Discord Rich Presence in Vintage Story</Description>
    
    <TargetFramework>net7.0</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Configurations>Debug;Release;Release_Linux;Debug_Linux</Configurations>
    <Platforms>AnyCPU;x64;x86</Platforms>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release_Linux|AnyCPU'">
    <DefineConstants>$(DefineConstants);PLATFORM_LINUX</DefineConstants>
    <DebugType>portable</DebugType>
    <Optimize>True</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release_Linux|x86'">
    <DefineConstants>$(DefineConstants);PLATFORM_LINUX</DefineConstants>
    <DebugType>portable</DebugType>
    <Optimize>True</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release_Linux|x64'">
    <DefineConstants>$(DefineConstants);PLATFORM_LINUX</DefineConstants>
    <DebugType>portable</DebugType>
    <Optimize>True</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug_Linux|AnyCPU'">
    <DefineConstants>$(DefineConstants);PLATFORM_LINUX</DefineConstants>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug_Linux|x86'">
    <DefineConstants>$(DefineConstants);PLATFORM_LINUX</DefineConstants>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug_Linux|x64'">
    <DefineConstants>$(DefineConstants);PLATFORM_LINUX</DefineConstants>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DiscordRichPresence" Version="1.2.1.24" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="VintagestoryLib">
      <HintPath>$(VINTAGE_STORY)/VintagestoryLib.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="VintagestoryAPI">
      <HintPath>$(VINTAGE_STORY)/VintagestoryAPI.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="set &quot;target=unknown&quot;&#xD;&#xA;set &quot;config=unknown&quot;&#xD;&#xA;&#xD;&#xA;if &quot;$(ConfigurationName)&quot;==&quot;Debug&quot; if &quot;$(Platform)&quot;==&quot;x64&quot; goto DebugWinx64&#xD;&#xA;if &quot;$(ConfigurationName)&quot;==&quot;Debug&quot; if &quot;$(Platform)&quot;==&quot;x86&quot; goto DebugWinx64&#xD;&#xA;if &quot;$(ConfigurationName)&quot;==&quot;Release&quot; if &quot;$(Platform)&quot;==&quot;x64&quot; goto ReleaseWinx64&#xD;&#xA;if &quot;$(ConfigurationName)&quot;==&quot;Release&quot; if &quot;$(Platform)&quot;==&quot;x86&quot; goto ReleaseWinx86&#xD;&#xA;if &quot;$(ConfigurationName)&quot;==&quot;Release_Linux&quot; if &quot;$(Platform)&quot;==&quot;x64&quot; goto ReleaseLinux64&#xD;&#xA;if &quot;$(ConfigurationName)&quot;==&quot;Release_Linux&quot; if &quot;$(Platform)&quot;==&quot;x86&quot; goto ReleaseLinux86&#xD;&#xA;&#xD;&#xA;goto Finish&#xD;&#xA;&#xD;&#xA;:DebugWinx64&#xD;&#xA;set &quot;target=Windows&quot;&#xD;&#xA;set &quot;config=Debug&quot;&#xD;&#xA;goto Finish&#xD;&#xA;&#xD;&#xA;:ReleaseWinx64&#xD;&#xA;set &quot;target=Windows&quot;&#xD;&#xA;set &quot;config=Release&quot;&#xD;&#xA;goto Finish&#xD;&#xA;&#xD;&#xA;:ReleaseWinx86&#xD;&#xA;set &quot;target=Windows&quot;&#xD;&#xA;set &quot;config=Release&quot;&#xD;&#xA;goto Finish&#xD;&#xA;&#xD;&#xA;:ReleaseLinux64&#xD;&#xA;set &quot;target=Linux&quot;&#xD;&#xA;set &quot;config=Release&quot;&#xD;&#xA;goto Finish&#xD;&#xA;&#xD;&#xA;:ReleaseLinux86&#xD;&#xA;set &quot;target=Linux&quot;&#xD;&#xA;set &quot;config=Release&quot;&#xD;&#xA;goto Finish&#xD;&#xA;&#xD;&#xA;:Finish&#xD;&#xA;copy /Y &quot;$(SolutionDir)Properties\modInfo.json&quot; &quot;$(TargetDir)modInfo.json&quot;&#xD;&#xA;copy /Y &quot;$(SolutionDir)Properties\modicon.png&quot; &quot;$(TargetDir)modicon.png&quot;&#xD;&#xA;del &quot;$(TargetDir)VintageRPC.deps.json&quot;&#xD;&#xA;if &quot;%25config%25&quot;==&quot;Release&quot; (&#xD;&#xA;7z a -tzip &quot;$(SolutionDir)bin\VintageRPC_%25target%25_%25config%25_$(Platform).zip&quot; -r &quot;$(TargetDir)*&quot; &#xD;&#xA;)" />
  </Target>

</Project>
